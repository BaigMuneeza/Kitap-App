<UserControl x:Class="KitapUIElements.Views.CancelMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KitapUIElements.Views" xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             mc:Ignorable="d" Height="30"
             d:DesignHeight="30" d:DesignWidth="800">

    <Grid Grid.ColumnSpan="2">

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>

        <dx:SimpleButton Width="30" Margin="3,0,0,0" Height="29" Name="btnCancel" Opacity="1" BorderThickness="0" Content="X" Foreground="White" FontSize="16" Cursor="Hand" Grid.Column="2" CornerRadius="15" Background="black" Click="BtnClose_Click" />
        <dx:SimpleButton Width="30"  Height="29" Name="btnMinimize" Opacity="1" BorderThickness="0" Content="-" Foreground="White" FontSize="16" Cursor="Hand" Grid.Column="1" CornerRadius="15" Background="black" Click="BtnMinimize_Click" />

    </Grid>
</UserControl>